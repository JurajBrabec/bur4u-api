<service>
  <id>bur4u-api</id>
  <name>BUR-4U-API Service</name>
  <description>This service is a back end for BUR 4U API Service</description>
  <executable>%BASE%\..\node.exe</executable>
  <workingdirectory>%BASE%\..</workingdirectory>
  <arguments>bur4u-api.js --module api</arguments>
  <serviceaccount>
    <domain>NT AUTHORITY</domain>
    <user>LocalService</user>
    <password>secret</password>
    <allowservicelogon>true</allowservicelogon>
  </serviceaccount>
  <logpath>%BASE%\..\log</logpath>
  <log mode="roll-by-time">
    <keepFiles>7</keepFiles>  
    <pattern>yyyyMMdd</pattern>
  </log>
  <onfailure action="restart" />
</service>
